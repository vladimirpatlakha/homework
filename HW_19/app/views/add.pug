extends layout

block content
	h1 Все курсы Академии

	form(method='post')
		fieldset.form-group
			label(for='name') Name:
			input.form-control(name='name', type='text', placeholder='Введите имя курса')
			small.text-muted Добавьте свой новый курс.
		button.btn.btn-primary(type='submit') Создать курс
		a.btn.btn-default(href='/api/courses') Отмена